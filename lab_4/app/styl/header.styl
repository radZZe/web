.flex-center
  flex-direction column
  justify-content center
  align-items center

color-gray = gray 

html
  height 100%
  width 100%

body
  size(100%,100%)
  margin 0
  padding 0


.header
  margin 0;
  padding 0;
  height 20%;
  display grid;
  grid-template-columns 2fr 1fr 1fr 1fr;
  grid-template-rows repeat(2,1fr);
  grid-template-areas "header_title . . .""header_title menu menu menu"

.header_title
  display flex
  @extend .flex-center
  margin 0
  background-color color-gray
  grid-area header_title
  font-size 20px

.menu
  background-color color-gray
  grid-area menu
  display flex
  align-items center
  flex-direction row
  justify-content space-around
  a
    text-align center
    text-decoration none
    color black
    font-size 20px
    &:hover
      color red
a.active
  color red

@media (max-width:1024px)
  .header_title
    display none
    size(0,0)
  .header
    margin 0
    padding 0
    height 20%
    display block
  .menu
    height 100%
    display grid
    grid-template-columns repeat(2,1fr)
    grid-template-rows auto
    background-color color-gray